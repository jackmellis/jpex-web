{
    "parserOptions" : {
      "ecmaVersion" : 6
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "node" : true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
